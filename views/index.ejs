<%- include('./partials/head.ejs') %>


  <!--Main layout-->
  <div class="container py-5">
    <!--Section: News of the day-->
    <section class="border-bottom pb-4 mb-5">
      <div class="row gx-5">
        <div class="col-md-6 mb-4">
          <div class="bg-image hover-overlay ripple shadow-2-strong rounded-5" data-mdb-ripple-color="light">
            <img src="https://mdbcdn.b-cdn.net/img/new/standard/nature/0<%- Math.floor(Math.random() * 10) + 10 %>.webp"
              class="img-fluid" />
            <a href="/posts/<%= rows[rows.length - 1].post_id %>">
              <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
            </a>
          </div>
        </div>

        <div class="col-md-6 mb-4">
          <span class="badge bg-danger px-2 py-1 shadow-1-strong mb-3">News of the day</span>
          <h4><strong>
              <%= rows[rows.length - 1].title %>
            </strong></h4>
          <p class="text-muted">
            <%= moment(rows[rows.length - 1].createdAt).fromNow()%>
          </p>
          <p class="text-muted">
            <%= rows[rows.length - 1].Description %>
          </p>
          <button type="button" class="btn btn-primary">Read more</button>
        </div>
      </div>
    </section>
    <!--Section: News of the day-->

    <!--Section: Content-->
    <section>
      <div class="row gx-lg-5">
        <div class="col-lg-4 col-md-12 mb-4 mb-lg-0">
          <!-- News block -->
          <div>
            <!-- Featured image -->
            <div class="bg-image hover-overlay shadow-1-strong ripple rounded-5 mb-4" data-mdb-ripple-color="light">
              <img src="https://mdbcdn.b-cdn.net/img/new/fluid/city/0<%- Math.floor(Math.random() * 10) + 10 %>.webp" class="img-fluid" />
              <a href="/posts/<%= rows[rows.length - 1].post_id %>">
                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
              </a>
            </div>

            <!-- Article data -->
            <div class="row mb-3">
              <div class="col-6">
                <a href="/posts/<%= rows[rows.length - 2].post_id %>" class="text-info">
                  <i class="fas fa-plane"></i>
                  Travels
                </a>
              </div>

              <div class="col-6 text-end">
                <u>
                  <%= moment(rows[rows.length - 1].createdAt).fromNow()%>
                </u>
              </div>
            </div>

            <!-- Article title and description -->
            <a href="" class="text-dark">
              <h5>
                <%= rows[rows.length - 2].title %>
              </h5>

              <p>
                <%= rows[rows.length - 2].Description %>
              </p>
            </a>

            <hr />

            <% for (let i=5;i<10;i++){ %>
              <!-- News -->
              <a href="/posts/<%= rows[i].post_id %>" class="text-dark">
                <div class="row mb-4 border-bottom pb-2">
                  <div class="col-3">
                    <img src="https://mdbcdn.b-cdn.net/img/new/standard/city/0<%- Math.floor(Math.random() * 10) + 10 %>.webp"
                      class="img-fluid shadow-1-strong rounded" alt="Hollywood Sign on The Hill" />
                  </div>

                  <div class="col-9">
                    <p class="mb-2"><strong> <%= rows[i].title %></strong></p>
                    <p>
                      <u>
                        <%= moment(rows[i].createdAt).fromNow()%>
                      </u>
                    </p>
                  </div>
                </div>
              </a>
              <% } %>


          </div>
          <!-- News block -->
        </div>

        <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
          <!-- News block -->
          <div>
            <!-- Featured image -->
            <div class="bg-image hover-overlay shadow-1-strong rounded-5 ripple mb-4" data-mdb-ripple-color="light">
              <img src="https://mdbcdn.b-cdn.net/img/new/standard/city/0<%- Math.floor(Math.random() * 10) + 10 %>.webp" class="img-fluid" alt="Brooklyn Bridge" />
              <a href="/posts/<%= rows[rows.length - 3].post_id %>">
                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
              </a>
            </div>

            <!-- Article data -->
            <div class="row mb-3">
              <div class="col-6">
                <a href="" class="text-danger">
                  <i class="fas fa-chart-pie"></i>
                  Business
                </a>
              </div>

              <div class="col-6 text-end">
                <u> 15.07.2020</u>
              </div>
            </div>

            <!-- Article title and description -->
            <a href="/posts/<%= rows[rows.length - 3].post_id %>" class="text-dark">
              <h5>
                <%= rows[rows.length - 3].title %>
              </h5>

              <p>
                <%= rows[rows.length - 3].Description %>
              </p>
            </a>

            <hr />

            <!-- News -->
            
            <% for (let i=7;i<10;i++){ %>
              <!-- News -->
              <a href="/posts/<%= rows[i].post_id %>" class="text-dark">
                <div class="row mb-4 border-bottom pb-2">
                  <div class="col-3">
                    <img src="https://mdbcdn.b-cdn.net/img/new/standard/city/0<%- Math.floor(Math.random() * 10) + 10 %>.webp"
                      class="img-fluid shadow-1-strong rounded" alt="Hollywood Sign on The Hill" />
                  </div>

                  <div class="col-9">
                    <p class="mb-2"><strong> <%= rows[i].title %></strong></p>
                    <p>
                      <u>
                        <%= moment(rows[i].createdAt).fromNow()%>
                      </u>
                    </p>
                  </div>
                </div>
              </a>
              <% } %>
          </div>
          <!-- News block -->
        </div>

        <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
          <!-- News block -->
          <div>
            <!-- Featured image -->
            <div class="bg-image hover-overlay shadow-1-strong rounded-5 ripple mb-4" data-mdb-ripple-color="light">
              <img src="https://mdbcdn.b-cdn.net/img/new/standard/city/0<%- Math.floor(Math.random() * 10) + 10 %>.webp" class="img-fluid"
                alt="Golden Gate National Recreation Area" />
              <a href="/posts/<%= rows[rows.length - 4].post_id %>">
                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
              </a>
            </div>

            <!-- Article data -->
            <div class="row mb-3">
              <div class="col-6">
                <a href="" class="text-warning">
                  <i class="fas fa-code"></i>
                  Technology
                </a>
              </div>

              <div class="col-6 text-end">
                <u> 15.07.2020</u>
              </div>
            </div>

            <!-- Article title and description -->
            <a href="/posts/<%= rows[rows.length - 4].post_id %>" class="text-dark">
              <h5>
                <%= rows[rows.length - 4].title %>
              </h5>

              <p>
                <%= rows[rows.length - 4].Description %>
              </p>
            </a>

            <hr />

            <!-- News -->


            <% for (let i=3;i<7;i++){ %>
              <!-- News -->
              <a href="/posts/<%= rows[i].post_id %>" class="text-dark">
                <div class="row mb-4 border-bottom pb-2">
                  <div class="col-3">
                    <img src="https://mdbcdn.b-cdn.net/img/new/standard/city/0<%- Math.floor(Math.random() * 10) + 10 %>.webp"
                      class="img-fluid shadow-1-strong rounded" alt="Hollywood Sign on The Hill" />
                  </div>

                  <div class="col-9">
                    <p class="mb-2"><strong> <%= rows[i].title %></strong></p>
                    <p>
                      <u>
                        <%= moment(rows[i].createdAt).fromNow()%>
                      </u>
                    </p>
                  </div>
                </div>
              </a>
              <% } %>

                <!-- News block -->
          </div>
        </div>
    </section>
    <!--Section: Content-->

    <!-- Pagination -->
    <nav class="my-4" aria-label="...">
      <ul class="pagination pagination-circle justify-content-center">
        <li class="page-item">
          <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item active" aria-current="page">
          <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
        </li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
          <a class="page-link" href="#">Next</a>
        </li>
      </ul>
    </nav>
  </div>
  <!--Main layout-->


  <%- include('./partials/footer.ejs') %>